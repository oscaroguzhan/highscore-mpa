<div class="container-fluid">
  <section class="row gameInfo">
    <img src="<%= game.image_url %>" class="col-6" />
    <div class="col-6">
      <h2 class="mb3"><%=game.title%></h2>
      <div>
        <span><%=game.release_date%></span>,
        <span><%=game.genre%></span>
        <p class="mt-3"><%=game.description%></p>
      </div>
    </div>
  </section>
  <h2 class="text-center mt-5">Highscores</h2>
  <section class="row playersScores">
    <!-- loopa players allscore -->
    <% highscores.forEach(({player,score_date,points}) => { %>
    <div class="card d-flex mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <p class="card-text flex-start"><%= player %>,<%= score_date %></p>
          <p class="flex-end"><%=points%></p>
        </div>
      </div>
    </div>
    <% }) %>
  </section>
</div>
